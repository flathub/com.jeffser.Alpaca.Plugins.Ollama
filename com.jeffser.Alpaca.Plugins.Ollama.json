{
  "id": "com.jeffser.Alpaca.Plugins.Ollama",
  "runtime": "com.jeffser.Alpaca",
  "runtime-version": "stable",
  "sdk": "org.gnome.Sdk//49",
  "build-extension": true,
  "cleanup": [
    "*.a",
    "*.la"
  ],
  "modules": [
    {
      "name": "ollama",
      "buildsystem": "simple",
      "build-commands": ["cp -rf --remove-destination ./* ${FLATPAK_DEST}/"],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/ollama/ollama/releases/download/v0.13.1/ollama-linux-amd64.tgz",
          "sha256": "4997753db0c578d24f8fc95d1538741609d72529ab6e913ecbf910ae919b0232",
          "strip-components": 0,
          "only-arches": ["x86_64"]
        },
        {
          "type": "archive",
          "url": "https://github.com/ollama/ollama/releases/download/v0.13.1/ollama-linux-arm64.tgz",
          "sha256": "3f2242c3b8e469d2a6fb5b50f14c2c6a9925392479fe213f12628f397d4b0c71",
          "strip-components": 0,
          "only-arches": ["aarch64"]
        }
      ]
    },
    {
      "name": "metainfo",
      "buildsystem": "simple",
      "build-commands": ["install -Dm0644 com.jeffser.Alpaca.Plugins.Ollama.metainfo.xml ${FLATPAK_DEST}/share/metainfo/${FLATPAK_ID}.metainfo.xml"],
      "sources": [
        {
          "type": "file",
          "path": "com.jeffser.Alpaca.Plugins.Ollama.metainfo.xml"
        }
      ]
    }
  ]
}
