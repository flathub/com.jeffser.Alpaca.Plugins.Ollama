{
    "id": "com.jeffser.Alpaca.Plugins.Ollama",
    "runtime": "com.jeffser.Alpaca",
    "runtime-version": "stable",
    "sdk": "org.gnome.Sdk//49",
    "build-extension": true,
    "cleanup": [
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "ollama",
            "buildsystem": "simple",
	    "build-commands": [
            	"cp -rf --remove-destination ./* ${FLATPAK_DEST}/"
            ],
            "sources": [
                {
            		"type": "archive",
            		"url": "https://github.com/ollama/ollama/releases/download/v0.11.10/ollama-linux-amd64.tgz",
            		"sha256": "da2be71e972752e3099ef1d1226050d2b3d1ce79a4fec3bdb6edc70a7601e060",
		    	"strip-components": 0,
			"only-arches": [
		    		"x86_64"
		    	]
            	},
            	{
            		"type": "archive",
            		"url": "https://github.com/ollama/ollama/releases/download/v0.11.10/ollama-linux-arm64.tgz",
            		"sha256": "8d7dc33c862c6d8600bcbd98e087cdc78f39fe5c5f6e4439924d0188a1e9a85d",
		    	"strip-components": 0,
			"only-arches": [
		    		"aarch64"
		    	]
            	}
            ]
        },
	{
            "name": "metainfo",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm0644 com.jeffser.Alpaca.Plugins.Ollama.metainfo.xml ${FLATPAK_DEST}/share/metainfo/${FLATPAK_ID}.metainfo.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "com.jeffser.Alpaca.Plugins.Ollama.metainfo.xml"
                }
            ]
        }
    ]
}
