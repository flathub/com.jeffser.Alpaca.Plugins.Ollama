{
    "id": "com.jeffser.Alpaca.Plugins.Ollama",
    "runtime": "com.jeffser.Alpaca",
    "runtime-version": "stable",
    "sdk": "org.gnome.Sdk//47",
    "build-extension": true,
    "cleanup": [
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "ollama",
            "buildsystem": "simple",
	    "build-commands": [
            	"cp -rf --remove-destination ./* ${FLATPAK_DEST}/"
            ],
            "sources": [
                {
            		"type": "archive",
            		"url": "https://github.com/ollama/ollama/releases/download/v0.6.0/ollama-linux-amd64.tgz",
            		"sha256": "ffac427e4bd6515a6abde784b15e5411b1d75bf6253702758c5165d26b0e0f02",
		    	"strip-components": 0,
			"only-arches": [
		    		"x86_64"
		    	]
            	},
            	{
            		"type": "archive",
            		"url": "https://github.com/ollama/ollama/releases/download/v0.6.0/ollama-linux-arm64.tgz",
            		"sha256": "0d8c9bb35440963b0e2df4650cd1b2df85e2e4e220c3a1d791e01ddaf1589b3c",
		    	"strip-components": 0,
			"only-arches": [
		    		"aarch64"
		    	]
            	}
            ]
        },
	{
            "name": "metainfo",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm0644 com.jeffser.Alpaca.Plugins.Ollama.metainfo.xml ${FLATPAK_DEST}/share/metainfo/${FLATPAK_ID}.metainfo.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "com.jeffser.Alpaca.Plugins.Ollama.metainfo.xml"
                }
            ]
        }
    ]
}
