{
  "id": "com.jeffser.Alpaca.Plugins.Ollama",
  "runtime": "com.jeffser.Alpaca",
  "runtime-version": "stable",
  "sdk": "org.gnome.Sdk//49",
  "build-extension": true,
  "cleanup": [
    "*.a",
    "*.la"
  ],
  "modules": [
    {
      "name": "ollama",
      "buildsystem": "simple",
      "build-commands": ["cp -rf --remove-destination ./* ${FLATPAK_DEST}/"],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/ollama/ollama/releases/download/v0.13.2/ollama-linux-amd64.tgz",
          "sha256": "ee655079ed20b90c7fb0de5c337ece4d4e85d58167338edf44a991f7bd81c3e0",
          "strip-components": 0,
          "only-arches": ["x86_64"]
        },
        {
          "type": "archive",
          "url": "https://github.com/ollama/ollama/releases/download/v0.13.2/ollama-linux-arm64.tgz",
          "sha256": "5422155b63da19adb5e3dd5679f6700ab5813a8ab2c268bbb0d1326e7709f810",
          "strip-components": 0,
          "only-arches": ["aarch64"]
        }
      ]
    },
    {
      "name": "metainfo",
      "buildsystem": "simple",
      "build-commands": ["install -Dm0644 com.jeffser.Alpaca.Plugins.Ollama.metainfo.xml ${FLATPAK_DEST}/share/metainfo/${FLATPAK_ID}.metainfo.xml"],
      "sources": [
        {
          "type": "file",
          "path": "com.jeffser.Alpaca.Plugins.Ollama.metainfo.xml"
        }
      ]
    }
  ]
}
