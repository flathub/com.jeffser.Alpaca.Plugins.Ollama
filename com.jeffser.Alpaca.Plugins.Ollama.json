{
    "id": "com.jeffser.Alpaca.Plugins.Ollama",
    "runtime": "com.jeffser.Alpaca",
    "runtime-version": "stable",
    "sdk": "org.gnome.Sdk//47",
    "build-extension": true,
    "cleanup": [
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "ollama",
            "buildsystem": "simple",
	    "build-commands": [
            	"cp -rf --remove-destination ./* ${FLATPAK_DEST}/"
            ],
            "post-install": [
		"rm ${FLATPAK_DEST}/com.jeffser.Alpaca.Plugins.Ollama.metainfo.xml",
                "install -Dm0644 com.jeffser.Alpaca.Plugins.Ollama.metainfo.xml ${FLATPAK_DEST}/share/metainfo/${FLATPAK_ID}.metainfo.xml"
            ],
            "sources": [
                {
            		"type": "archive",
            		"url": "https://github.com/ollama/ollama/releases/download/v0.5.13/ollama-linux-amd64.tgz",
            		"sha256": "8d4e054bc512d53115074c19de5a7915df78180f89c014abbae4497e4a813a3c",
		    	"strip-components": 0,
			"only-arches": [
		    		"x86_64"
		    	]
            	},
            	{
            		"type": "archive",
            		"url": "https://github.com/ollama/ollama/releases/download/v0.5.13/ollama-linux-arm64.tgz",
            		"sha256": "21c124617dee9ab4423c055cdc6ef1b0c7c9416bff27775f49959cbb0ecd27b2",
		    	"strip-components": 0,
			"only-arches": [
		    		"aarch64"
		    	]
            	},
                {
                    "type": "file",
                    "path": "com.jeffser.Alpaca.Plugins.Ollama.metainfo.xml"
                }
            ]
        }
    ]
}
